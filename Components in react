//so components are the functions which returns JSX;
//it is reuseable by declearing only once;
//eg code

//so this is a function which will call/return the components;
//always use export before any thing which will finally show your output;
export const Cards = () => {
  return (
    <div>
      {/* // this is the method to call/use this components
      //this compo can be call multiple times; */}
      <TheComponent />
      <TheComponent />
      <TheComponent />
      <TheComponent />
    </div>
  );
};

